<div class="row">
  <div class="col-xs-8">
    <div class="thumbnail space-below space-above">
      <div class="row">
        <div class="col-xs-12 text-center">
          <%= @campaign.name %>
        </div>
      </div>
      <%= form_for([@campaign, @scenario]) do |f| %>
        <%= render 'shared/error_messages', :target => @scenario %>
        <div class="row form-group">
          <div class="col-xs-3">
            <%= f.label :order, "Scenario #" %>
          </div>
          <div class="col-xs-1">
            <%= f.number_field :order, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-xs-3">
            <%= f.label :name, "Name" %>:
          </div>
          <div class="col-xs-4">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
          <div class="row">
            <div class="col-xs-6 text-right">
              <a href="<%= campaign_path(@campaign)%>" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Cancel
              </a>
            </div>
            <div class="col-xs-6 text-left">
              <%= button_tag(class: "btn btn-default btn-lg") do %>
                  <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
