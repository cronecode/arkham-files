<div class="row">
  <div class="col-xs-6">
    <div class="thumbnail">
      <%= form_for ([@campaign, @scenario]), method: :put do |f| %>
          <div class="row form-group">
            <div class="col-xs-6">
              <%= f.label :victory_display %>:
            </div>
            <div class="col-xs-6">
              <%= f.number_field :victory_display, class: "form-control" %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-xs-6">
              <%= f.label :resolution %>:
            </div>
            <div class="col-xs-6">
              <%= f.select(:resolution, ['no resolution', 'R1', 'R2', 'R3'], { include_blank: true }, class: "form-control") %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-xs-3">
              <%= f.label :notes %>:
            </div>
            <div class="col-xs-9">
              <%= f.text_area :notes, rows: 10, class: "form-control" %>
            </div>
          </div>
          <%= f.submit "Save", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>