<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-6">
    <div class="thumbnail space-above text-center">
      <%= form_for @campaign, method: :put do |f| %>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-12 text-left">
                <%= f.label :notes, "Notes" %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <%= f.text_area :notes, rows: 10, class: "form-control" %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-6 text-right">
                <a href="<%= campaign_path(@campaign)%>" class="btn btn-default btn-lg">
                  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Cancel
                </a>
              </div>
              <div class="col-xs-6 text-left">
                <%= button_tag(class: "btn btn-default btn-lg") do %>
                    <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
                <% end %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

